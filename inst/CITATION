citHeader("To cite convenienceFunctions in publications use:")

citEntry(
  entry    = "manual",
  title    = "convenienceFunctions: A Collection of convenience functions",
  author   = person(given = "Johannes",
                    family = "Feldhege"),
  year     = 2020,
  url      = "https://github.com/jfeldhege/convenienceFunctions",
  textVersion = paste(
"Feldhege, J. (2020). convenienceFunctions: A Collection of convenience functions. URL: https://github.com/jfeldhege/convenienceFunctions"
  )
)
